<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@drawable/round_edit_text"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Loc."
        android:layout_below="@id/busName"
        android:id="@+id/id1"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/busName"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        tools:text="Bus Name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id1"
        android:id="@+id/currLoc"
        tools:text="Tatanagar Jn"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        tools:text="1005"
        android:layout_marginStart="5dp"
        android:textSize="18sp"
        android:id="@+id/busId"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus No."
        android:layout_alignBaseline="@id/busId"
        android:layout_toStartOf="@id/busId"
        android:id="@+id/id2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avail."
        android:layout_below="@id/busId"
        android:layout_toStartOf="@id/avail"
        android:layout_alignBaseline="@id/currLoc"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="50%"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:id="@+id/avail"
        android:layout_alignBaseline="@id/currLoc"
        android:textSize="25sp"
        android:textColor="#00cc99"
        android:textStyle="bold"
        android:layout_marginStart="5dp"/>

</RelativeLayout>